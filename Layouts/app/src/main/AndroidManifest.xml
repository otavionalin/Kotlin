<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.layouts">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Layouts">

        <!-- Activity principal (launcher) -->
        <activity
            android:name="com.example.layouts.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Telas de demonstração de layouts -->
        <activity
            android:name="com.example.layouts.LinearLayoutActivity"
            android:exported="false" />

        <activity
            android:name="com.example.layouts.ConstraintLayoutActivity"
            android:exported="false" />

        <activity
            android:name="com.example.layouts.FrameLayoutActivity"
            android:exported="false" />

        <activity
            android:name="com.example.layouts.TableLayoutActivity"
            android:exported="false" />

        <activity
            android:name="com.example.layouts.GridLayoutActivity"
            android:exported="false" />

        <activity
            android:name="com.example.layouts.ScrollViewActivity"
            android:exported="false" />
    </application>

</manifest>
